{
  "manifest_version": 2,
  "name": "Yandex music deco",
  "version": "1.0",
  "icons": {
    "128": "images/nyan_cat.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://music.yandex.ru/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Yandex music deco",
    "default_icon": "images/nyan_cat.png"
  },
  "web_accessible_resources": [
    "images/*"
  ]
}
